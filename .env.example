# Path to the SQLite database file
DATABASE_URL=./data/credittimeline.db

# Optional API key for the ingestion endpoint
# If unset, ingestion is open (suitable for local-only use)
# INGEST_API_KEY=your-secret-key-here

# Server port (default: 3000)
PORT=3000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# CORS: allowed origin for API requests
# Empty or unset = same-origin only (no CORS headers)
# '*' = allow all origins
# 'https://myapp.com' = allow only that origin
CORS_ALLOW_ORIGIN=

# Auto-run database migrations on startup (true/false)
AUTO_MIGRATE=true
